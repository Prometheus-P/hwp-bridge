# ============================================
# HwpBridge Environment Variables
# Copy this file to .env and fill in values
# ============================================

# ============================================
# Application
# ============================================
RUST_LOG=info,hwp_core=debug,hwp_web=debug
PORT=3000

# ============================================
# Google OAuth 2.0 (for Google Docs integration)
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ============================================
# Redis (optional, for caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECS=60

# ============================================
# File Upload
# ============================================
MAX_UPLOAD_SIZE_MB=10

# ============================================
# Security
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here
CORS_ORIGINS=http://localhost:3000,https://hwpbridge.io

# ============================================
# Monitoring (optional)
# ============================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
SENTRY_DSN=

# ============================================
# Database (future, if needed)
# ============================================
# DATABASE_URL=postgres://user:pass@localhost:5432/hwpbridge
